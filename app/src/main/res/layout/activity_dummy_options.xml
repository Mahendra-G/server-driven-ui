<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dummyOptions.DummyOptionsActivity">


    <RelativeLayout
        android:id="@+id/rl_dummy"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_logo"
            android:src="@drawable/bankaks_logo"
            android:layout_width="200dp"
            android:layout_marginStart="@dimen/dimen_80dp"
            android:layout_marginEnd="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_180dp"/>
        <RelativeLayout
            android:id="@+id/rl_sp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/spinner_border"
            android:layout_marginStart="@dimen/dimen_24dp"
            android:layout_marginEnd="@dimen/dimen_24dp"
            android:layout_below="@id/iv_logo"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/drop_down_icon" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_proceed"
            android:text="@string/btn_proceed"
            android:background="@drawable/bg_button"
            android:layout_marginStart="@dimen/dimen_24dp"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dimen_24dp"
            android:layout_below="@id/rl_sp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>